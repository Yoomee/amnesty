.container
  .row
    .span12.offset2
      #video_wrapper
        #video.hide
          %iframe{:width => 700,  :height => 395, :src => "http://www.youtube.com/embed/r8WT_ZCUmaY?enablejsapi=1&wmode=opaque&version=3&autohide=1&showinfo=0", :frameborder => 0, :allowfullscreen => true, :allowtransparency => true}
      #send_socks_info.info_box.hide
        %p=(t :send_socks)
        =link_to("#{t :close} x", "#", :class => "close_info_box")
      #buy_socks_info.info_box.hide
        %p=(t :buy_socks)
        =link_to("#{t :close} x", "#", :class => "close_info_box")
    .span2
      #share_this_wrapper
        #share_this.hide
          %h3=t :share_this
          %ul.unstyled
            %li=twitter_share
            %li=facebook_share
            %li=google_share

  .row#calls_to_action
    #send_and_buy.span7.offset2    
      %h2#send_socks.call_to_action
        =link_to (t :send_socks), "#"
      %h2#buy_socks.call_to_action
        =link_to (t :buy_socks), "#"
    .span5
      %h3#find_out_more.call_to_action
        =link_to "http://www.youtube.com/user/invisiblesfilms", :id=>"find_out_more_link", :target => '_blank', do
          %span.hide
            =t :find_out_more
          =t :find_out_more_about
