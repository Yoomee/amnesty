      .row#header
        .span10.offset2
          =link_to "Amnesty International", "http://www.amnesty.org/", :target=>"_blank", :id=>"amnesty_logo"
          #title=t(:site_name)
        .span2
          #language_toggle
            =link_to("ENG", "/", :class => "#{'active' if I18n.locale != :es}")
            =link_to("ESP", "/?hl=es", :class => "#{'active' if I18n.locale == :es}")
    =yield
